<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.flickfixer"
    version     = "1.0.2">

    <name>PhoneGap: FlickFixer</name>

    <description>
        An image inspector
    </description>

    <author href="http://www.decisionesinteligentes.com"
        email="mario.chavez@decisionesinteligentes.com">
        Mario A Chavez
    </author>

    <gap:platforms>
        <gap:platform name="android" minVersion="2.1" />
    </gap:platforms>

    <icon src="icon.png" gap:role="default" />

    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/network" />
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>

    <!-- sample preference specification -->
    <preference name="autorotate" value="false" readonly="true"/>
</widget>